<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:DatasetProcessor.UserControls">
  <Design.PreviewWith>
    <controls:SelectFolderControl />	  
  </Design.PreviewWith>	
	
  <Style Selector="controls|SelectFolderControl">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <Grid Classes="gridSecondary" ColumnDefinitions="Auto, 10, *, 10, Auto">
			  <Button Grid.Column="0"
					  Content="{Binding ButtonText, RelativeSource={RelativeSource TemplatedParent}}"
					  Width="180"
					  Height="40"
					  Command="{Binding SelectFolderButtonCommand, RelativeSource={RelativeSource TemplatedParent}}"/>
			  <Label Grid.Column="2"
					 Content="{Binding LabelText, RelativeSource={RelativeSource TemplatedParent}}"
					 HorizontalAlignment="Left"
					 VerticalAlignment="Center"/>
			  <Button Grid.Column="4"
					  BorderThickness="0"
					  Width="40"
					  Height="40"
					  Command="{Binding OpenFolderInExplorerCommand, RelativeSource={RelativeSource TemplatedParent}}">
				  <Panel>
					  <Image Source="{SvgImage /Assets/Icons/folder_opened.svg}"
							 HorizontalAlignment="Stretch"
							 VerticalAlignment="Stretch"
							 Margin="1"/>
				  </Panel>
			  </Button>
		  </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>